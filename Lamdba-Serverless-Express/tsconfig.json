{
  "compilerOptions": {
    "target": "es2020",  // Target ES2020 for modern JavaScript features
    "strict": true,  // Enable strict mode for better type safety
    "preserveConstEnums": true,  // Retain const enums in the output
    "outDir": "dist",  // Output directory for compiled files
    "baseUrl": ".",  // The base directory for module resolution
    "sourceMap": true,  // Generate source maps for easier debugging
    "module": "commonjs",  // Use CommonJS module system (required for Node.js)
    "moduleResolution": "node",  // Resolve modules using Node.js style resolution
    "esModuleInterop": true,  // Enable interop for ES modules
    "skipLibCheck": true,  // Skip library type checks for faster compilation
    "forceConsistentCasingInFileNames": true  // Ensure consistent casing for file names
  },
  "exclude": [
    "node_modules",  // Exclude the node_modules directory
    "dist"  // Exclude the output directory (dist)
  ],
  "include": [
    "src/**/*.ts",  // Include all .ts files in the src folder
    "test/**/*.spec.ts"  // Include all .spec.ts test files in the test folder
  ],
  "types": [
    "jasmine",  // Include Jasmine types for tests
    "node"  // Include Node.js types for running in a Node environment
  ]
}
